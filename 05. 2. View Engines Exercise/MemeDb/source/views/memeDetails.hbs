
<hr/>
<h1>Here is your meme</h1>
<hr/><br/>
<div class="content">
    <img src="{{url}}" alt="" />
    <h3> {{title}}</h3>
    <p> {{description}}</p>
    <button>
        <a href="{{url}}" download="{{title}}.jpg">Download Meme</a>
    </button>
    <button>
        <span id="delete" data-meme-id={{id}}>Delete</span>
    </button>
</div>


<script>
    let $deleteButton = $('#delete');
    $deleteButton.on('click', () => {
        let memeId = $deleteButton.attr('data-meme-id');
        $.post('/api/memes/delete/' + memeId)
            .then(data => {
                window.location.pathname = data.location;
            })
            .catch(err => {
                $('.content')
                    .first()
                    .append($('<h1>').text(err));
            })
    })
</script>